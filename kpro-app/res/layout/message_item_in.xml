<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >
 
    <!-- From Label -->
    <TextView
        android:id="@+id/lblFrom"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:paddingTop="8dp"
        android:paddingLeft="8dp"
        android:textSize="14dp"
        android:maxLines="3"
        android:lines="3"
        android:text="Sender"
        android:textStyle="bold" />
 
    <TextView
        android:id="@+id/lblSecurityLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12dp"
        android:text="Security Label"
        android:layout_alignParentRight="true"
        android:background="@color/red"
        android:textColor="@color/white"
    />
    
    <!-- Mail Subject -->
    <TextView android:id="@+id/lblSubject"
              android:layout_height="wrap_content"
              android:layout_width="fill_parent"
              android:paddingLeft="8dp"
              android:lines="2"
              android:maxLines="2"  
              android:textSize="12dp"
              android:text="Subject"
              android:layout_below="@id/lblFrom"/>
 
    <!-- Mail date -->
    <TextView android:id="@+id/lblDate"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="01/01/2012 00:00"
              android:padding="8dp"
              android:textSize="12dp"
              android:layout_below="@id/lblSubject"/>
    
    <!-- Mail body -->
    <TextView android:id="@+id/lblText"
              android:background="@color/white"
              android:layout_width="fill_parent"
              android:layout_height="wrap_content"
              android:layout_below="@id/lblDate"
              android:textColor="@color/black"
              android:text="Static test text"
              android:maxLines="15"
              android:lines="15"
              android:textSize="12dp"
              android:scrollbars="vertical"
              android:padding="8dp"/>
    
    <!-- Horizontal layout for the bottom buttons -->
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                  android:layout_width="fill_parent"
                  android:layout_height="wrap_content"
                  android:paddingLeft="10dp"
                  android:paddingRight="10dp"
                  android:orientation="horizontal"
                  android:layout_alignParentBottom="true"
    >
        
        <!-- Previous button -->
        <Button
            android:id="@+id/btnPrevious"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Prev"
            android:layout_alignParentLeft="true" />
        
        <!-- Reply button -->
        <Button
            android:id="@+id/btnReply"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Reply"
            android:layout_marginLeft="45dp"
            android:layout_marginRight="45dp"/>
        
        <!-- Next button -->
        <Button
            android:id="@+id/btnNext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Next"
            android:layout_alignParentRight="true"/>
    </LinearLayout>
    
</RelativeLayout>
